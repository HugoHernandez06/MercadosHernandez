@model MercadosHernandez.Models.Ciudad

@{
    ViewData["Title"] = "Details";
}

<h1 style="color:orange">Visualización de la información de las diferentes ciudades donde tenemos sedes!</h1>
<form>
    <div>
        <h4 style="color:orange">En el siguiente formulario puedes visualizar los detalles de la ciudad!</h4>
        <hr />
        <dl class="row" style="color:white">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Departamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Departamento.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-primary btn-primary" asp-action="Index">Back to List</a>
    </div>
</form>