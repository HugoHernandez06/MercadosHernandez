@model MercadosHernandez.Models.Departamento

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:orange">Creación de la información de los diferentes departamentos donde tenemos sedes!</h1>

<h4 style="color:orange">En el siguiente formulario puedes ingresar el nuevo nombre, pais y estado del nuevo departamento!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nombre" class="control-label" style="color:white"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PaisID" class="control-label" style="color:white"></label>
                    <select asp-for="PaisID" class="form-control" asp-items="ViewBag.PaisID"></select>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label" style="color:white">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
