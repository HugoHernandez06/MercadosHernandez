@model MercadosHernandez.Models.Propietario

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:orange">Creación de la información de los diferentes propietarios!</h1>

<h4 style="color:orange">En el siguiente formulario puedes ingresar el nuevo nombre, apellido y telefono del propietario!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nombre" class="control-label" style="color:white"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Apellido" class="control-label" style="color:white"></label>
                    <input asp-for="Apellido" class="form-control" placeholder="Apellido">
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefono" class="control-label" style="color:white"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="0000000">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
