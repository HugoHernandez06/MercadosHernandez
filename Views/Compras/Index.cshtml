@model IEnumerable<MercadosHernandez.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:orange">Compras de nuestros clientes!</h1>

<p>
    <a class="btn btn-primary btn-xl" asp-action="Create">Ingresar una nueva compra!</a>
</p>

<table class="table table-bordered" style="color:white">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mercado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mercado.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                <button type="button" class="btn btn-light"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                <button type="button" class="btn btn-warning"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
            </td>
        </tr>
        }
    </tbody>
</table>