@model MercadosHernandez.Models.Compra

@{
    ViewData["Title"] = "Delete";
}


<h1 style="color:orange">Eliminar compra</h1>

<h3 style="color:orange">Está seguro que quiere eliminar la siguiente compra?</h3>

<form asp-action="Delete">
    <div>
        <hr />
        <dl class="row" style="color:white">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mercado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mercado.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Nombre)
            </dd>
        </dl>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a class="btn btn-primary btn-primary" asp-action="Index">Back to List</a>
</form>
